{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "es6": true
    },
    "settings": {
        "import/parser": "babel-eslint",
        "import/cache": {
            "lifetime": 5
        },
    },
    "rules": {
        "indent": ["error", 2, {"SwitchCase": 1}],
        "no-console": "off",
        "no-debugger": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/forbid-prop-types": "off",
        "react/prefer-stateless-function": "off",
        "class-methods-use-this": "off",
        'no-underscore-dangle': "off",
        'jsx-a11y/no-static-element-interactions': [
          'warn',
          {
            handlers: [
              'onClick',
              'onMouseDown',
              'onMouseUp',
              'onKeyPress',
              'onKeyDown',
              'onKeyUp',
              'onMouseOver',
            ],
          },
        ],
        "import/no-extraneous-dependencies": "off",
        "import/no-unresolved": "off",
        "import/extensions": "off",
    }, 
    "globals": {
        "PRODUCTION": true,
        "DEBUG": true,
        "DEBUG_RENDER": true,
        "API_URL_IN_BROWSER": true,
        "API_URL_IN_CONTAINER": true,
        "localStorage": true,

        /* testing related globals */
        "describe": true,
        "beforeEach": true,
        "afterEach": true,
        "inject": true,
        "expect": true,
        "it": true
    }
}
